<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androiddev.artemqa.compmasterclientversion.ui.activity.ProfileActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_client_photo_profile_a"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/ic_no_user"
            app:civ_border_color="#39f19e"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#2e799c"
            app:civ_shadow_radius="45"
            app:layout_constraintBottom_toTopOf="@+id/tv_login_user_nav_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_phone_main_a"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_email_profile_a"
        app:srcCompat="@drawable/ic_telephone_icon" />

    <ImageView
        android:id="@+id/iv_email_profile_a"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_address_profile_a"
        app:srcCompat="@drawable/ic_email" />

    <ImageView
        android:id="@+id/iv_address_profile_a"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_name_profile_a"
        app:srcCompat="@drawable/ic_map_icon" />

    <ImageView
        android:id="@+id/iv_name_profile_a"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:srcCompat="@drawable/ic_profile_blue" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_name_profile_a"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_name_profile_a"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_name_profile_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tv_name_profile_a"
            android:inputType="text|textPersonName"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_address_profile_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_address_profile_a"
        app:layout_constraintTop_toBottomOf="@+id/til_name_profile_a">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_address_profile_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tv_address_profile_a"
            android:inputType="text|textPostalAddress"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_email_profile_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_email_profile_a"
        app:layout_constraintTop_toBottomOf="@+id/til_address_profile_a">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_email_profile_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/tv_email_profile_a"
            android:inputType="textEmailAddress"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_phobe_profile_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_phone_main_a"
        app:layout_constraintTop_toBottomOf="@+id/til_email_profile_a">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_phobe_profile_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tv_phobe_profile_a"
            android:inputType="phone"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_save_profile_a"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="20dp"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/cv_save_profile_a"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
