<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/draw_layout_main_a"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.androiddev.artemqa.compmasterclientversion.ui.activity.MainActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/tv_our_contact_main_a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tv_our_contact_main_a"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            map:cameraBearing="112.5"
            map:cameraTargetLat="54.331983"
            map:cameraTargetLng="48.387616"
            map:cameraZoom="16"
            map:mapType="normal"
            map:cameraTilt="15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_location_main_a"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_email_main_a"
            app:layout_constraintTop_toBottomOf="@+id/iv_phone_main_a"
            app:srcCompat="@drawable/ic_map_icon" />

        <ImageView
            android:id="@+id/iv_email_main_a"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_hours_work_main_a"
            app:srcCompat="@drawable/ic_email" />

        <ImageView
            android:id="@+id/iv_phone_main_a"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="38dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_hours_work_main_a"
            app:layout_constraintTop_toBottomOf="@+id/iv_vk_main_a"
            app:srcCompat="@drawable/ic_telephone_icon" />

        <ImageView
            android:id="@+id/iv_hours_work_main_a"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_url_main_a"
            app:srcCompat="@drawable/ic_hours_work_icon" />

        <ImageView
            android:id="@+id/iv_url_main_a"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="84dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_url_icon" />

        <ImageView
            android:id="@+id/iv_vk_main_a"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="84dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_url_main_a"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_vk_icon" />

        <TextView
            android:id="@+id/tv_our_contact_main_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tv_our_contact_main_a"
            android:textSize="24sp"
            android:textColor="@color/darkBlue"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_url_main_a"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:text="@string/tv_url_main_a"
            android:textColor="@color/darkBlue"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_url_main_a"
            app:layout_constraintTop_toBottomOf="@+id/tv_our_contact_main_a" />

        <TextView
            android:id="@+id/tv_hours_work_main_a"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:text="@string/tv_hours_work_main_a"
            android:textColor="@color/darkBlue"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_hours_work_main_a"
            app:layout_constraintTop_toBottomOf="@+id/tv_url_main_a" />

        <TextView
            android:id="@+id/tv_email_main_a"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="54dp"
            android:text="@string/tv_email_main_a"
            android:textColor="@color/darkBlue"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_email_main_a"
            app:layout_constraintTop_toBottomOf="@+id/tv_hours_work_main_a" />

        <TextView
            android:id="@+id/tv_vk_main_a"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:text="@string/tv_vk_main_a"
            android:textColor="@color/darkBlue"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.187"
            app:layout_constraintStart_toEndOf="@+id/iv_vk_main_a"
            app:layout_constraintTop_toBottomOf="@+id/tv_our_contact_main_a" />

        <TextView
            android:id="@+id/tv_phone_main_a"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:text="@string/tv_phone_main_a"
            android:textColor="@color/darkBlue"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_phone_main_a"
            app:layout_constraintTop_toBottomOf="@+id/tv_vk_main_a" />

        <TextView
            android:id="@+id/tv_location_main_a"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:text="@string/tv_location_main_a"
            android:textColor="@color/darkBlue"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_location_main_a"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_main_a" />
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
    android:id="@+id/nav_view_main_a"
    app:headerLayout="@layout/drawer_menu_header"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:background="@drawable/drawer_menu_bg"
    app:itemTextColor="@color/blue"
    app:itemIconTint="@color/blue"
    app:menu="@menu/menu_drawer"
    android:layout_gravity="start"/>
</android.support.v4.widget.DrawerLayout>
